{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "./",
    "rootDir": "../",
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noImplicitAny": false,
    "pretty": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "lib": ["es2018", "dom", "es5", "es6", "es2019"],
    "paths": {
      "src/*": ["./src/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
    }
  },
  "include": [
    "src", 
  ],
  "exclude": [
    "node_modules", "**/node_modules/*", "**/*.test.ts", "**/*.stories.tsx"
  ]

}
